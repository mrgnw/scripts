#! /usr/bin/env zsh

v_latest=$(git-latest-tag duckdb/duckdb)
echo " ğŸ¦†" "$v_latest"
duck_url=https://github.com/duckdb/duckdb/releases/download/v$v_latest/duckdb_cli-osx-universal.zip
duck_zip="$HOME/Downloads/duckdb-${v_latest}.zip"

